{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "outDir": "./dist/tmp", 
    "sourceMap": true
  },
  
  "include": [
    "./source/js/**/*.ts" 
  ],
  
  "exclude": [
    "node_modules",
    "dist"
  ]
}